extends ../layouts/master

block sidebar-content 
  a.brand-link(href="/prodi")
    img.brand-image.img-circle.elevation-3(src="/dist/img/AdminLTELogo.png", alt="AdminLTE Logo", style="opacity: .8")
    span.brand-text.font-weight-light Beasiswa App
  //- Sidebar
  .sidebar
    //- Sidebar user panel (optional)
    .user-panel.mt-3.pb-3.mb-3.d-flex
      .image
        img.img-circle.elevation-2(src="/dist/img/user2-160x160.jpg", alt="User Image")
      .info
        //- a.d-block(href="#") #{session.username}
    //- SidebarSearch Form
    .form-inline
      .input-group(data-widget="sidebar-search")
        input.form-control.form-control-sidebar(type="search", placeholder="Search", aria-label="Search")
        .input-group-append
          button.btn.btn-sidebar
            i.fas.fa-search.fa-fw
    //- Sidebar Menu
    nav.mt-2
      ul.nav.nav-pills.nav-sidebar.flex-column(data-widget="treeview", role="menu", data-accordion="false")
        //- Add icons to the links using the .nav-icon class
        //- with font-awesome or any other icon font library
        li.nav-item.menu-open
          a.nav-link.active(href="#")
            i.nav-icon.fas.fa-tachometer-alt
            p
              | Dashboard
              i.right.fas.fa-angle-left
          ul.nav.nav-treeview
            li.nav-item
              a.nav-link(href="/prodi")
                p Home
            li.nav-item
              a.nav-link(href="/prodi/show-beasiswa")
                p List Beasiswa
            li.nav-item
              a.nav-link(href="")
                p List User

block web-content   
    //- Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0 List Beasiswa
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href="#") Home
    //- Main content
    section.content
        .container-fluid
            .card
            .card-body.p-4
                .table-responsive
                 table.table.table-striped(id="table-beasiswa")
                    thead
                        tr
                            th Jenis Beasiswa
                            th Dokumen Pengajuan
                            th NRP
                            th Pengajuan Id
                            th Periode Id 
                            th Status Pengajuan Prodi 
                            th Status Pengajuan Fakultas 
                            th Tanggal Pengajuan
                            th Action 
                    tbody
                        each d in data
                            tr
                                if d.beasiswa_id == 1234
                                    td Beasiswa Berprestasi
                                else
                                    td Beasiswa Atlet
                                td #{d.dokumen_pengajuan}
                                td #{d.nrp}
                                td #{d.pengajuan_id}
                                td #{d.periode_id}
                                td #{d.status_pengajuan}
                                td #{d.status_pengajuan_fakultas}
                                td #{d.tanggal_pengajuan}
                                td
                                    button.btn.btn-success.btn-sm.btn-approve(type="button", data-id=d.pengajuan_id)
                                      | Approved
                                    button.btn.btn-danger.btn-sm.btn-decline(type="button", data-id=d.pengajuan_id)
                                      | Declined
block extra-js 
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src="/js/prodi/declineBeasiswa.js")
