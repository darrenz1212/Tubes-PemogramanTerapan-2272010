extends ../layouts/master

block sidebar-content 
    a.brand-link(href="/mahasiswa")
      img.brand-image.img-circle.elevation-3(src="/dist/img/AdminLTELogo.png", alt="AdminLTE Logo", style="opacity: .8")
      span.brand-text.font-weight-light Beasiswa App
    //- Sidebar
    .sidebar
      //- Sidebar user panel (optional)
      .user-panel.mt-3.pb-3.mb-3.d-flex
        .image
          img.img-circle.elevation-2(src="/dist/img/user2-160x160.jpg", alt="User Image")
        .info
          a.d-block(href="#") #{user.username}
      //- SidebarSearch Form
      .form-inline
        .input-group(data-widget="sidebar-search")
          input.form-control.form-control-sidebar(type="search", placeholder="Search", aria-label="Search")
          .input-group-append
            button.btn.btn-sidebar
              i.fas.fa-search.fa-fw
      //- Sidebar Menu
      nav.mt-2
        ul.nav.nav-pills.nav-sidebar.flex-column(data-widget="treeview", role="menu", data-accordion="false")
          //- Add icons to the links using the .nav-icon class
          //- with font-awesome or any other icon font library
          li.nav-item.menu-open
            a.nav-link.active(href="#")
              i.nav-icon.fas.fa-tachometer-alt
              p
                | Dashboard
                i.right.fas.fa-angle-left
            ul.nav.nav-treeview
              li.nav-item
                a.nav-link.active(href="/mahasiswa")
                  p Home
              li.nav-item
                a.nav-link(href="/mahasiswa/pengajuan")
                  p Pengajuan Beasiswa
              li.nav-item
                a.nav-link(href="/mahasiswa/history")
                  p Riwayat Pengajuan

block web-content   
    //- Content Header (Page header)
    .content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1.m-0 Pengajuan Beasiswa #{user.username}
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href="#") Home
    //- Main content
    section.content
      .container-fluid
        .card
          .card-header
            h3.card-title Form Pengajuan Beasiswa
          .card-body
            // Tambahkan blok untuk menampilkan pesan
            if success
              .alert.alert-success #{success}
            if error
              .alert.alert-danger #{error}

            form(action="/mahasiswa/pengajuan" method="post" enctype="multipart/form-data")
              .form-group
                label(for="beasiswaId") Beasiswa ID
                input.form-control(type="number", name="beasiswaId", placeholder="Masukkan Beasiswa ID" required)
              .form-group
                label(for="periodeId") Periode ID
                input.form-control(type="number", name="periodeId", placeholder="Masukkan Periode ID" required)
              button.btn.btn-primary(type="submit") Ajukan Beasiswa
